{
  "extends": [
    "next/core-web-vitals",

    // 追記
    "plugin:tailwindcss/recommended",
    "plugin:import/warnings",
    "prettier"
  ],
  "plugins": ["prettier"],
  // 追記
  // tailwind.config.js などの config ファイル、ESLint の対象外にする
  "ignorePatterns": [
    "*.config.js"
  ],
  "rules": {
    "prettier/prettier": "error"
  }
}